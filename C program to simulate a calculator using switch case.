#include <stdio.h>
int main() {
 char operator;
 double num1, num2;
 double result;
 // Input the operator
 printf("Enter an operator (+, -, *, /): ");
 scanf(" %c", &operator);
 // Input the operands
 printf("Enter two operands: ");
 scanf("%lf %lf", &num1, &num2);
 // Calculate result based on operator
 switch (operator) {
 case '+':
 result = num1 + num2;
 break;
 case '-':
 result = num1 - num2;
 break;
 case '*':
 result = num1 * num2;
 break;
 case '/':
 if (num2 != 0) {
 result = num1 / num2;
 } else {
 printf("Error! Division by zero.\n");
 return 1;
 }
break;
 default:
 printf("Error! Invalid operator.\n");
 return 1;
 }
 // Print the result
 printf("Result: %.2f\n", result);
 return 0;
}

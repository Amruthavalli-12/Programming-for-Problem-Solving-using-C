#include <stdio.h>
int main() {
 float length, width, base, height;
 float area_rectangle, area_triangle;
 // Input dimensions for the rectangle
 printf("Enter the length and width of the rectangle: ");
 scanf("%f %f", &length, &width);
 // Input dimensions for the triangle
printf("Enter the base and height of the triangle: ");
 scanf("%f %f", &base, &height);
 // Calculate the area of the rectangle
 area_rectangle = length * width;
 // Calculate the area of the triangle
 area_triangle = 0.5 * base * height;
 // Print the areas
 printf("Area of the rectangle: %.2f\n", area_rectangle);
 printf("Area of the triangle: %.2f\n", area_triangle);
 return 0;
}
